<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IosDeploy.Add"
             >
<VerticalStackLayout x:Name="layout">
        <Entry x:Name="txtName" Placeholder="Name" />
        <Entry x:Name="txtCategory" Placeholder="Category" />
        <Entry x:Name="txtDescription" Placeholder="Description" />
        <Entry x:Name="txtCount" Placeholder="Count" />

        <Button Text="Add Data" Clicked="Add_Button_Clicked" />

        <Image
                x:Name="QrCodeImage"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center"
                />

    </VerticalStackLayout>
</ContentView>
